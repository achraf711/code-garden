    padding: var(--spacing-xl) var(--spacing-md);
    margin-bottom: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
}

.hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-xl) 0;
}

.hero h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
}

.hero p {
    font-size: 1.2rem;
    margin-bottom: var(--spacing-lg);
}

.featured-products,
.categories {
    padding: var(--spacing-xl) 0;
}

.featured-products h2,
