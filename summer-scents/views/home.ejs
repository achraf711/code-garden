<div class="home-page">
    <section class="hero">
        <div class="hero-content">
            <h1>Discover Your Perfect Summer Scent</h1>
            <p>Explore our collection of premium summer fragrances</p>
            <a href="/products" class="btn btn-primary">Shop Now</a>
        </div>
    </section>

    <section class="featured-products">
        <h2>Featured Products</h2>
        <div class="products-grid">
            <% products.forEach(product => { %>
                <div class="product-card">
                    <% if (product.isNew) { %>
                        <span class="badge badge-new">New</span>
                    <% } %>
                    <% if (product.onSale) { %>
                        <span class="badge badge-sale">Sale</span>
                    <% } %>
                    
                    <img 
                        class="product-image lazy-image" 
                        src="/images/placeholder.jpg"
                        data-src="<%= product.image %>" 
                        alt="<%= product.name %>"
                    >
                    
                    <div class="product-info">
                        <h3 class="product-title"><%= product.name %></h3>
                        <div class="star-rating">
                            <% for(let i = 0; i < 5; i++) { %>
                                <i class="fas fa-star<%= i < Math.floor(product.rating || 0) ? '' : '-o' %>"></i>
                            <% } %>
                            <span class="rating-count">(<%= product.reviewCount || 0 %>)</span>
                        </div>
                        <p class="product-description"><%= product.description %></p>
                        <div class="product-price">$<%= product.price.toFixed(2) %></div>
                        <div class="product-actions">
                            <a href="/products/<%= product.id %>" class="btn btn-primary">View Details</a>
                            <button class="wishlist-btn" data-product-id="<%= product.id %>" aria-label="Add to wishlist">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <section class="categories">
        <h2>Shop by Category</h2>
        <div class="category-grid">
            <a href="/products?category=Fresh" class="category-card">
                <i class="fas fa-wind"></i>
                <h3>Fresh</h3>
                <p>Light and invigorating scents</p>
            </a>
            <a href="/products?category=Floral" class="category-card">
                <i class="fas fa-flower"></i>
                <h3>Floral</h3>
                <p>Romantic floral fragrances</p>
            </a>
            <a href="/products?category=Citrus" class="category-card">
                <i class="fas fa-lemon"></i>
                <h3>Citrus</h3>
                <p>Energizing citrus blends</p>
            </a>
            <a href="/products?category=Oriental" class="category-card">
                <i class="fas fa-moon"></i>
                <h3>Oriental</h3>
                <p>Exotic evening scents</p>
            </a>
        </div>
    </section>
</div>

